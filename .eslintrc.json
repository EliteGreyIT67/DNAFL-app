{
  "plugins": ["html"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "tailwind": "writable"  // Declare for CDN script config
  },
  "rules": {
    "no-console": "off",  // Allow console for debugging
    "no-unused-vars": "warn",  // Warn on unused vars for flexibility
    "no-undef": "warn",  // Downgrade to warn so CI doesn't fail on globals
    "prefer-const": "error"  // Enforce const for immutables
  },
  "ignorePatterns": ["node_modules/", "dist/"]  // Ignore common dirs
}
